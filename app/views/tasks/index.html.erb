<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table  class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Todo</th>
      <th>Category</th>
      <th>Due date</th>
      <th>Priority</th>
      <th>Status</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.todo %></td>
        <td><%= task.category %></td>
        <td><%= task.due_date %></td>
        <td><%= task.priority %></td>
         <%if task.completed? %>
        <td>Completed</td>
        <%else%>
        <td>Not Completed</td>
        <%end%>
        <!-- <td><%= task.user_id %></td> -->
        <td><%= link_to 'Show', task %></td>
        <!-- <% if task.user == current_user%> -->
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
        <td></td>
        <td></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<!-- <%= link_to 'New Task', new_task_path %> -->
<%= render 'alltask', task: @task %>
